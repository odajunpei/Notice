<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
        <h2 class="mt-3 pb-4">投稿一覧</h2>
      <% @posts.each do |post| %>
      <% if current_member.familycode_id == post.user.familycode_id %>
      <table class='table table-hover table-inverse'>
        <tbody>
            <tr>
              <th>
                <%= attachment_image_tag post.user, :profile_image, size:"100x100",format: 'jpeg', fallback:"no_image.jpg" %>
              </th>
              <td>
              <%= link_to post_path(post.id) do %>
                <h1><%= post.post %></h1>
                <h2><%= post.created_at.strftime('%d日%H:%M') %></h2>
              <% end %>
              </td>
            </tr>
        </tbody>
      </table>
      <% end %>
    <% end %>
    <h3><%= paginate @posts %></h3>
   </div>
  </div>
</div>

