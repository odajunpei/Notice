<p id="notice"><%= notice %></p>
<div class="container-fluid">
  <div class="row">
    <div class="col-md-10 offset-md-1">
      <h1>投稿詳細</h1>
      <table class="table">
        <thread>
          <tr>
            <th>ID</th>
            <th>氏名</th>
            <th>投稿</th>
            <th>投稿時間</th>
          </tr>
        </thread>
        <tbody>
          <tr>
            <td><%= @post.id %></td>
            <td>
              <%= link_to admin_user_path(@post.user) do %>
                <%= @post.user.name %>
              <% end %>
            </td>
            <td><%= @post.post %></td>
            <td><%= @post.created_at.strftime('%Y/%m/%d %H:%M:%S') %></td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
    <div class="row">
      <div class="col-md-10 offset-1">
        <% if @post.comments.present? %>
          <h1>コメント</h1>
          <table class="table">
            <thread>
              <tr>
                <th>コメントID</th>
                <th>氏名</th>
                <th>コメント</th>
                <th>コメント時間</th>
              </tr>
            </thread>
          　<tbody>
          　   <% @comments.each do |comment| %>
          　   <tr>
          　     <td>
          　       <%= comment.id %>
          　     </td>
          　     <td>
          　       <%= comment.member.name %>
          　     </td>
          　     <td>
          　       <%=comment.comment %>
          　     </td>
          　     <td>
          　       <%= comment.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
          　     </td>
          　   </tr>
          　  <% end %>
          　</tbody>
          </table>
          <%= paginate @comments %>
        <% else %>
          <h1 class="text-danger mt-5">・この投稿に対するコメントはありません。</h1>
        <% end %>
      </div>
    </div>
  </div>
</div>
