<div class="container-fluid">
  <div class="row">
    <div class="col-10 offset-1">
      <p class="page-title">
       <h1>投稿会員詳細</h1>
      </p>
      <table class="table">
        <tr>
          <th>
            氏名(投稿数)
          </th>
          <th>
            <%= @user.name %>(<%= @user.posts.count %>)
          </th>
        </tr>
        <tr>
          <th>
            氏名カナ
          </th>
          <th>
            <%= @user.name_kana %>
          </th>
        </tr>
             <tr>
          <th>
            ニックネーム
          </th>
          <td>
            <%= @user.nickname %>
          </td>
        </tr>
          <th>
            性別
          </th>
          <td>
            <%= @user.gender %>
          </td>
        <tr>
          <th>
            電話番号
          </th>
          <th>
            <%= @user.telephone_number %>
          </th>
        </tr>
        <tr>
          <th>
            生年月日
          </th>
          <th>
            <%= @user.birth_date %>
          </th>
        </tr>
         <tr>
          <th>
            都道府県
          </th>
          <td>
            <%= @user.address %>
          </td>
        </tr>
        <tr>
          <th>
            メールアドレス
          </th>
          <th>
            <%= @user.email %>
          </th>
        </tr>
        <tr>
          <th>
            家族コード
          </th>
          <td>
            <%= link_to admin_familycode_path(@user.familycode_id) do %>
              <%= @user.familycode.famcode %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>
            家族の投稿者一覧
          </th>
          <td>
            <% @familyusers.each do |familyuser| %>
              <%= link_to admin_user_path(familyuser) do %>
                ・<%= familyuser.name %>
              <% end %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>
            <div>
            家族メンバー一覧
            </div>
          </th>
          <td>
            <% @familymembers.each do |familymember| %>
              <%= link_to admin_member_path(familymember) do %>
                ・<%= familymember.name %>
              <% end %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>
            <%= link_to "削除する", admin_user_path(@user), class:"btn btn-danger" %>
          </th>
        </tr>
      </table>
    </div>
  </div>
</div>