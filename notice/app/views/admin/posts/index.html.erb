<div class="container-fuluid">
  <div class="row">
    <div class="col-md-10 offset-1">
      <h1>投稿一覧</h1>
      <table class="table">
        <thread>
          <tr>
            <th><%= sorttable "id", "ID" %></th>
            <th><%= sorttable "post", "投稿" %></th>
            <th><%= sorttable "created_at", "投稿時間" %></th>
            <th><%= sorttable "user.name_kana", "投稿者" %></th>
            <th><%= sorttable "comments.count", "投稿コメント数" %></th>
          </tr>
        </thread>
        <% @posts.each do |post| %>
        <tbody>
        <tr>
          <th>
            <%= post.id %>
          </th>
          <td>
            <%= link_to admin_post_path(post) do %>
              <%= post.post %>
            <% end %>
          </td>
          <td>
            <%= post.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
          </td>
          <td>
            <%= link_to admin_user_path(post.user) do %>
              <%= post.user.name %>
            <% end %>
          </td>
          <td>
            <%= post.comments.count %>
          </td>
        </tbody>
        <% end %>
        <%= paginate @posts %>
      </table>
    </div>
  </div>
</div>
