<div class="container-fuluid">
  <div class="row">
    <div class="col-xs-12 col-sm-10 offset-sm-1 col-md-10 offset-md-1">
      <h1 class="mt-3">家族コード作成</h1>
      <% if @family_code.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <strong>入力内容にエラーがあります</strong>
          <ul>
            <% @family_code.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model:@famly_code, url:familycodes_path,local:true do |f| %>
        <table class="table tablef text-center">
          <tr>
            <th>
              <h2><% f.label "family_code", "家族コード" %></h2>
            </th>
            <td>
              <span>
                <%= f.text_field :famcode, class:"form-size" %>
                <%= f.submit "作成", class:"btn btn-outline-success text-center ml-1" %>
              </span><br>
              <h3>※半角英数字8桁以上</h3>
            </td>
          </table>
        <% end %>
    </div>
  </div>
</div>
