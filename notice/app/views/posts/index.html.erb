<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2">
      <h1>投稿一覧</h1>
      <% @posts.each do |post| %>
      <table class='table table-hover table-inverse text-center'>
        <tbody>
            <tr>
              <td>
                <% if post.user.gender == "男性" %>
                  <%= attachment_image_tag post.user, :profile_image, size:"150x150", format: 'jpeg', fallback:"grand-papa.png" %><br>
                <% elsif post.user.gender == "女性" %>
                  <%= attachment_image_tag post.user, :profile_image, size:"150x150", format: 'jpeg', fallback:"grand-mama.png" %><br>
                <% else %>
                  <%= attachment_image_tag post.user, :profile_image, size:"150x150", format: 'jpeg', fallback:"grand.png" %><br>
                <% end %>
                <h1 class="smart"><%= post.user.nickname %></h1>
              </td>
              <td>
              <%= link_to post_path(post.id) do %>
                <% if post.post == "SOS" %>
                  <h1 class="text-danger"><strong><%= post.post %></strong></h1>
                  <h2 class="text-danger"><%= post.created_at.strftime('%Y/%m/%d %H:%M:%S') %></h2>
                <% else %>
                  <h1><%= post.post %></h1>
                  <h2><%= post.created_at.strftime('%Y/%m/%d %H:%M:%S') %></h2>
                <% end %>
              <% end %>
              </td>
            </tr>
        </tbody>
      </table>
    <% end %>
    <h3><%= paginate @posts %></h3>
   </div>
  </div>
</div>

