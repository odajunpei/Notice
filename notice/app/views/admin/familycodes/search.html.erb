<div class="container-fuluid">
  <div class="row">
    <div class="col-md-8"></div>
    <div class="col-md-4">
      <%= search_form_for @q, url: search_admin_familycodes_path do |f| %>
        <%= f.label :famcode_cont, '家族コード' %>
        <%= f.search_field :famcode_cont %>
        <% f.submit '検索' %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 offset-1">
      <h1>家族コード一覧</h1>
      <table class="table">
        <thead>
          <tr>
            <th class="text-center"><%= sorttable "id", "ID" %></th>
            <th class="text-center"><%= sorttable "famcode", "家族コード" %></th>
            <th class="text-center"><%= sorttable "created_at", "家族コード作成日時" %></th>
            <th class="text-center"><%= sorttable "users.count", "投稿会員数" %></th>
            <th class="text-center"><%= sorttable "members.count", "家族会員数" %></th>
          </tr>
        </thead>
        <% @results.each do |familycode| %>
        <tbody>
        <tr>
          <th class="text-center">
            <%= familycode.id %>
          </th>
          <td>
        <%= link_to admin_familycode_path(familycode) do %>
            <%= familycode.famcode %>
          <% end %>
          </td>
          <td>
            <%= familycode.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
          </td>
          <td>
            <%= familycode.users.count %>
          </td>
          <td>
            <%= familycode.members.count %>
          </td>
        </tbody>
        <% end %>
      </table>
      <%= paginate @results %>
    </div>
  </div>
</div>