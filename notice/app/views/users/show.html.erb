おじ会員プロフィール詳細画面
<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <p class="page-title">
        プロフィール詳細画面
      </p>
      <table class="table">
        <tr>
          <th>
            顔写真
          </th>
          <td>
            <%= attachment_image_tag @user, :profile_image, size:"200x200", format: 'jpeg', fallback:"no-image.jpg" %>
          </td>
        </tr>
        <tr>
          <th>
            氏名
          </th>
          <th>
            <%= @user.name %>
          </th>
        </tr>
        <tr>
          <th>
            氏名カナ
          </th>
          <th>
            <%= @user.name_kana %>
          </th>
        </tr>
        <tr>
          <th>
            電話番号
          </th>
          <th>
            <%= @user.telephone_number %>
          </th>
        </tr>
        <tr>
          <th>
            生年月日
          </th>
          <th>
            <%= @user.birth_year %>年<%= @user.birth_month %>月<%= @user.birth_day %>日
          </th>
        </tr>
        <tr>
          <th>
            メールアドレス
          </th>
          <th>
            <%= @user.email %>
          </th>
        </tr>
        <tr>
          <th>
            家族コード
          </th>
          <td>
            <%= @user.familycode.family_code %>
          </td>
        </tr>
        <tr>
          <th>
            <%= link_to "プロフィール情報を編集する", edit_user_path(@user) %>
          </th>
        </tr>
        <tr>
          <td>
            <%= link_to "投稿画面へ", new_post_path %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>