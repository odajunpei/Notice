<div class="container-fuluid">
  <div class="row">
    <div class="col-md-10 offset-1">
      <h1>家族コード作成画面</h1>
      <% if @family_code.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <strong>入力内容にエラーがあります</strong>
          <ul>
            <% @family_code.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model:@famly_code, url:familycodes_path,local:true do |f| %>
        <table class="table">
          <tr>
            <th>
              <%= f.label "family_code", "家族コード" %>
            </th>
            <td>
              <%= f.text_field :famcode %>
            </td>
          </tr>
          </table>
          <%= f.submit "家族コードの作成", class:"btn btn-success text-center" %>
        <% end %>
    </div>
  </div>
</div>
