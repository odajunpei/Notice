<div class="container-fuluid">
  <div class="row">
    <div class="col-md-10 offset-1">
      <h1>家族会員一覧</h1>
      <% @members.each do |member| %>
      <table class="table">
        <thread>
          <tr>
            <th>ID</th>
            <th>氏名</th>
            <th>性別</th>
            <th>都道府県</th>
            <th>電話番号</th>
            <th>メールアドレス</th>
            <th>コメント数</th>
            <th>登録日時</th>
            <th>削除</th>
          </tr>
        </thread>
        <tbody>
        <tr>
          <th>
            <%= member.id %>
          </th>
          <td>
            <%= link_to admin_member_path(member) do %>
              <%= member.name %>
            <% end %>
          </td>
          <td>
            <%= member.gender %>
          </td>
          <td>
            <%= member.address %>
          </td>
          <td>
            <%= member.telephone_number %>
          </td>
          <td>
            <%= member.email %>
          </td>
          <td>
            <%= member.comments.count %>回
          </td>
           <td>
            <%= member.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
          </td>
            <td>
            <%= link_to "削除する", admin_member_path(member), class:"btn btn-danger" %>
          </td>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>