<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <div class="d-flex justify-content-between">
        <h2 class="mt-3 pb-4">投稿一覧</h2>
      </div>
      <% @posts.each do |post| %>
      <!--% if current_member.familycode_id == @user.familycode_id %>-->
      <table class='table table-hover table-inverse'>
        <tbody>
            <tr>
              <th>
                <%= attachment_image_tag post.user, :profile_image, size:"200x200",format: 'jpeg', fallback:"no_image.jpg" %>
              </th>
              <td>
              <%= link_to post_path(post.id) do %>
                <%= post.post %>
              <% end %>
              </td>
            </tr>
        </tbody>
      </table>
      <% end %>
   </div>
  </div>
</div>
