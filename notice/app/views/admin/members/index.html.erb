<div class="container-fuluid">
  <div class="row">
    <div class="col-md-8"></div>
    <div class="col-md-4">
      <%= search_form_for @q, url: search_admin_members_path do |f| %>
        <%= f.label :email_cont, 'メールアドレス' %>
        <%= f.search_field :email_cont %>
        <% f.submit '検索' %>
      <% end %>
    </div>
  </div>
  <div class="row">
    <div class="col-md-10 offset-1">
      <h1>家族会員一覧</h1>
      <table class="table">
        <thread>
          <tr>
            <th><%= sorttable "id", "ID" %></th>
            <th><%= sorttable "name_kana", "氏名" %></th>
            <th><%= sorttable "gender", "性別" %></th>
            <th><%= sorttable "address","都道府県" %></th>
            <th><%= sorttable "telephone_number", "電話番号" %></th>
            <th><%= sorttable "email", "メールアドレス" %></th>
            <th><%= sorttable "comments.count", "コメント数" %></th>
            <th><%= sorttable "created_at", "登録日時" %></th>
          </tr>
        </thread>
        <% @members.each do |member| %>
        <tbody>
        <tr>
          <th>
            <%= member.id %>
          </th>
          <td>
            <%= link_to admin_member_path(member) do %>
              <%= member.name %>
            <% end %>
          </td>
          <td>
            <%= member.gender %>
          </td>
          <td>
            <%= member.address %>
          </td>
          <td>
            <%= member.telephone_number %>
          </td>
          <td>
            <%= member.email %>
          </td>
          <td>
            <%= member.comments.count %>回
          </td>
           <td>
            <%= member.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
          </td>
        </tbody>
      　<% end %>
      </table>
      <%= paginate @members %>
    </div>
  </div>
</div>