<div class="container-fuluid">
  <div class="row">
    <div class="col-md-10 offset-1 mt-3">
      <h1 class="mt-3">お問い合わせ</h1>
      <%= form_for @inquiry, :url => inquiry_thanks_path do |f| %>
        <table class="table tablef">
          <tr>
            <th><h3>名前</h3></th>
            <td>
              <%= f.hidden_field :name %>
              <h3><%= @inquiry.name %></h3>
            </td>
          </tr>
          <tr>
            <th><h3>メールアドレス</h3></th>
            <td>
              <%= f.hidden_field :email %>
              <h3><%= @inquiry.email %></h3>
            </td>
          </tr>
          <tr>
            <th><h3>お問い合わせ内容</h3></th>
            <td>
              <%= f.hidden_field :message %>
              <h3><%= simple_format(@inquiry.message) %></h3>
            </td>
          </tr>
        </table>
        <span>
          <%= f.submit '送信', :class => 'btn btn-outline-dark' %>
        </span>
        <span>
          <%= link_to '新規お問い合わせ画面に戻る', inquiry_index_path, class:"ml-1" %>
        </span>
      <% end %>
    </div>
  </div>
</div>