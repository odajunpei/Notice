<div class="container">
  <div class="row">
    <div class="col-10 offset-1">
      <h1 class="page-title">
        投稿会員プロフィール詳細
      </h1>
      <table class="table">
        <tr>
          <th>
            顔写真
          </th>
          <td>
            <%= attachment_image_tag @user, :profile_image, size:"200x200", format: 'jpeg', fallback:"grand.png" %>
          </td>
        </tr>
        <tr>
          <th>
            氏名
          </th>
          <th>
            <%= @user.name %>
          </th>
        </tr>
        <tr>
          <th>
            氏名カナ
          </th>
          <th>
            <%= @user.name_kana %>
          </th>
        </tr>
        <tr>
          <th>
            ニックネーム
          </th>
          <td>
            <%= @user.nickname %>
          </td>
        </tr>
        <tr>
          <th>
            性別
          </th>
          <td>
            <%= @user.gender %>
          </td>
        </tr>
        <tr>
          <th>
            電話番号
          </th>
          <th>
            <%= @user.telephone_number %>
          </th>
        </tr>
        <tr>
          <th>
            生年月日
          </th>
          <th>
            <%= @user.birth_date %>
          </th>
        </tr>
        <tr>
          <th>
            都道府県
          </th>
          <td>
            <%= @user.address %>
          </td>
        </tr>
        <tr>
          <th>
            メールアドレス
          </th>
          <th>
            <%= @user.email %>
          </th>
        </tr>
        <tr>
          <th>
            家族コード
          </th>
          <td>
            <%= @user.familycode.famcode %>
          </td>
        </tr>
        <tr>
          <th>
            <%= link_to "プロフィール情報を編集する", edit_user_path(@user) %>
          </th>
        </tr>
        <tr>
          <td>
            <%= link_to "投稿画面へ", new_post_path %>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>