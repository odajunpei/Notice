<div class="container-fluid">
  <div class="row">
    <div class="col-md-10 offset-1">
      <h1>家族会員プロフィール情報編集</h1>
    </div>
    <div class= "col-md-6 offset-3">
      <% if @member.errors.any? %>
        <div class="alert alert-danger" role="alert">
          <strong>入力内容にエラーがあります</strong>
          <ul>
            <% @member.errors.each do |attr, msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= form_with model:@member, url:member_path(@member), local:true do |f| %>
      <%= render "members/shared/error_messages", resource: @member %>
      <table class="table tablef text-center">
         <tr>
          <th>
            <h3><%= f.label :profile_image, "顔写真" %></h3>
          </th>
          <td>
            <h4><%= f.attachment_field :profile_image, size: "200x200" %></h4>
          </td>
        </tr>
        <tr>
          <th>
            <h3><%= f.label :name, "氏名" %></h3>
          </th>
          <td>
            <%= f.text_field :name, autofocus: true, placeholder:"山田太郎", size:50 %>
          </td>
        </tr>
        <tr>
          <th>
            <h3><%= f.label :name_kana, "カナ氏名" %></h3>
          </th>
          <td>
            <%= f.text_field :name_kana, placeholder: "ヤマダタロウ", size:50%>
          </td>
        </tr>
        <tr>
          <th>
            <h3><%= f.label :nickname, "ニックネーム" %></h3>
          </th>
          <td>
            <%= f.text_field:nickname, placeholder: "ヤーマダ", size:50 %>
          </td>
        </tr>
        <tr>
          <th>
            <h3><%= f.label :gender, "性別" %></h3>
          </th>
          <td>
            <h3>
              <%= f.radio_button :gender, :男性 %>
              <%= f.label :"男性" %>
              <%= f.radio_button :gender, :女性 %>
              <%= f.label :"女性" %>
              <%= f.radio_button :gender, :回答無し %>
              <%= f.label :"回答無し" %>
            </h3>
          </td>
        </tr>
        <tr>
          <th>
            <h3><%= f.label :telephone_number, "電話番号" %></h3>
          </th>
          <td>
            <%= f.number_field :telephone_number, placeholder: "ハイフン無しで入力下さい", size:50 %>
          </td>
        </tr>
        <tr>
          <th>
            <h3><%= f.label :birth_date, "生年月日" %></h3>
          </th>
          <td>
             <%= f.date_select :birth_date, start_year:1900 %>
          </td>
        </tr>
        <tr>
          <th>
            <h3><%= f.label :address, "都道府県" %></h3>
          </th>
          <td>
            <%= f.select :address, User.address_areas.keys, {} %>
          </td>
        </tr>
        <tr>
          <th>
            <h3><%= f.label :email, "メールアドレス" %></h3>
          </th>
          <td>
            <%= f.email_field :email, autofocus: true, autocomplete: "email", size:50 %>
          </td>
        </tr>
        <tr>
          <th>
            <h3><%= f.label :famcode, "家族コード" %></h3>
          </th>
          <td class="text-danger">
            <h3><strong>編集不可</strong></h3>
          </td>
        </tr>
        <tr>
          <th></th>
          <td>
            <%= f.submit "更新する", class:"btn btn-outline-success", size:20 %>
          </td>
        </tr>
      </table>
      <% end %>
    </div>
  </div>
</div>