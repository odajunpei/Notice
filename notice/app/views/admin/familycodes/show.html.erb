<div class="container-fuluid">
  <div class="row">
    <div class="col-md-10 offset-1">
      <h1 class="text-success">家族コード詳細:<%= @familycode.family_code %></h1>
      <% if @familycode.users.present? %>
        <h1>投稿者</h1>
          <table class="table">
            <thread>
              <tr>
                <th>ID</th>
                <th>氏名</th>
                <th>性別</th>
                <th>都道府県</th>
                <th>電話番号</th>
                <th>メールアドレス</th>
                <th>投稿数</th>
                <th>登録日時</th>
              </tr>
            </thread>
            <% @familycode.users.each do |user| %>
            <tbody>
              <tr>
                <th>
                  <%= user.id %>
                </th>
                <td>
                  <%= link_to admin_user_path(user) do %>
                    <%= user.name %>
                  <% end %>
                </td>
                <td>
                  <%= user.gender %>
                </td>
                <td>
                  <%= user.address %>
                </td>
                <td>
                  <%= user.telephone_number %>
                </td>
                <td>
                  <%= user.email %>
                </td>
                <td>
                  <%= user.posts.count %>回
                </td>
                <td>
                  <%= user.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
                </td>
              </tr>
            </tbody>
            <% end %>
          </table>
      <% else %>
        <h1 class="text-danger mt-5">・投稿者会員は未登録です。</h1>
      <% end %>
      <% if @familycode.members.present? %>
        <h1 class="mt-5">家族会員</h1>
        <table class="table">
          <thread>
            <tr>
              <th>ID</th>
              <th>氏名</th>
              <th>性別</th>
              <th>都道府県</th>
              <th>電話番号</th>
              <th>メールアドレス</th>
              <th>コメント数</th>
              <th>登録日時</th>
            </tr>
          </thread>
          <% @familycode.members.each do |member| %>
          <tbody>
          <tr>
            <th>
              <%= member.id %>
            </th>
            <td>
              <%= link_to admin_member_path(member) do %>
                <%= member.name %>
              <% end %>
            </td>
            <td>
              <%= member.gender %>
            </td>
            <td>
              <%= member.address %>
            </td>
            <td>
              <%= member.telephone_number %>
            </td>
            <td>
              <%= member.email %>
            </td>
            <td>
              <%= member.comments.count %>回
            </td>
            <td>
              <%= member.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
            </td>
          </tbody>
          <% end %>
        </table>
      <% else %>
        <h1 class="text-danger mt-5">・家族会員は未登録です。</h1>
      <% end %>
      <%= link_to "削除する", admin_familycode_path(@familycode),method: :delete, class:"btn btn-danger mt-5 t-center" %>
      </div>
    </div>
  </div>