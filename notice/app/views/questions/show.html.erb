<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-10 offset-sm-1 col-md-8 offset-md-2">
      <h1 class="mt-3">
        質問内容
          <% if @question.user_answer.blank? %>
            <span class="text-danger">(未返信)</span>
          <% else %>
            <span class="text-success">(返信内容⇒<%= @question.user_answer %>)</span>
          <% end %>
        </span>
      </h1>
    </div>
     <div class= "col-xs-10 col-sm-10 offset-sm-1 col-md-6 offset-md-3">
      <table class="table tablef">
        <tr>
          <th>
            質問相手
          </th>
        </tr>
        <tr>
          <td>
            <%= @question.user.nickname %>
          </td>
        </tr>
        <tr>
          <th>
            質問内容
          </th>
        </tr>
        <tr>
          <td>
            <%= @question.body %>
          </td>
        </tr>
        <tr>
          <th>
            回答選択肢1
          </th>
        </tr>
        <tr>
          <td>
            <%= @question.choices1 %>
          </td>
        </tr>
        <tr>
          <th>
            回答選択肢2
          </th>
        </tr>
        <tr>
          <td>
            <%= @question.choices2 %>
          </td>
        </tr>
        <% if @question.choices3.present? %>
        <tr>
          <th>
            回答選択肢3
          </th>
        </tr>
        <tr>
          <td>
            <%= @question.choices3 %>
          </td>
        </tr>
        <% end %>
        <tr>
          <td>
            <%= link_to '削除する', question_path(@question), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%>
          </td>
        </tr>
      </table>
    </div>
  </div>
</div>