<div class="container-fluid">
  <div class="row">
    <div class="col-md-10 offset-1">
      <h1>家族会員プロフィール詳細</h1>
    </div>
    <div class="col-md-6 offset-3">
      <table class="table tablef">
        <tr>
          <th>
            <h3>顔写真</h3>
          </th>
          <td>
            <%= attachment_image_tag @member, :profile_image, size:"200x200", format: 'jpeg', fallback:"no-image.jpg" %>
          </td>
        </tr>
        <tr>
          <th>
            <h3>氏名</h3>
          </th>
          <th>
            <h3><%= @member.name %></h3>
          </th>
        </tr>
        <tr>
          <th>
            <h3>氏名カナ</h3>
          </th>
          <th>
            <h3><%= @member.name_kana %></h3>
          </th>
        </tr>
        <tr>
          <th>
            <h3>ニックネーム</h3>
          </th>
          <td>
            <h3><%= @member.nickname %></h3>
          </td>
        </tr>
          <th>
            <h3>性別</h3>
          </th>
          <td>
            <h3><%= @member.gender %></h3>
          </td>
        <tr>
          <th>
            <h3>電話番号</h3>
          </th>
          <th>
            <h3><%= @member.telephone_number %></h3>
          </th>
        </tr>
        <tr>
          <th>
            <h3>生年月日</h3>
          </th>
          <th>
            <h3><%= @member.birth_date %></h3>
          </th>
        </tr>
         <tr>
          <th>
            <h3>都道府県</h3>
          </th>
          <td>
            <h3><%= @member.address %></h3>
          </td>
        </tr>
        <tr>
          <th>
            <h3>メールアドレス</h3>
          </th>
          <th>
            <h3><%= @member.email %></h3>
          </th>
        </tr>
        <tr>
          <th>
            <h3>家族コード</h3>
          </th>
          <td>
            <h3><%= @member.familycode.famcode %></h3>
          </td>
        </tr>
        <tr>
          <th>
            <h3>家族の投稿者一覧</h3>
          </th>
          <td>
            <% @familyusers.each do |familyuser| %>
              ・<%= familyuser.name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>
            <h3>家族メンバー一覧</h3>
          </th>
          <td>
            <% @familymembers.each do |familymember| %>
              ・<%= familymember.name %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>
            <h3><%= link_to "プロフィール情報を編集する", edit_member_path(@member) %></h3>
          </th>
        </tr>
      </table>
    </div>
  </div>
</div>