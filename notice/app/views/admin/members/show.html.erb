<div class="container-fluid">
  <div class="row">
    <div class="col-10 offset-1">
      <p class="page-title">
        <h1>家族会員詳細
          <% if @member.is_deleted? %>
            <span class="text-danger">(退会中)</span>
          <% else %>
            <span class="text-success">(有効)</span>
          <% end %>
         </h1>
      </p>
      <table class="table">
        <tr>
          <th>
            氏名(コメント数)
          </th>
          <td>
            <%= @member.name %>(<%= @member.comments.count %>)
          </td>
        </tr>
        <tr>
          <th>
            氏名カナ
          </th>
          <td>
            <%= @member.name_kana %>
          </td>
        </tr>
        <tr>
          <th>
            ニックネーム
          </th>
          <td>
            <%= @member.nickname %>
          </td>
        </tr>
          <th>
            性別
          </th>
          <td>
            <%= @member.gender %>
          </td>
        <tr>
          <th>
            電話番号
          </th>
          <td>
            <%= @member.telephone_number %>
          </td>
        </tr>
        <tr>
          <th>
            生年月日
          </th>
          <td>
            <%= @member.birth_date %>
          </td>
        </tr>
         <tr>
          <th>
            都道府県
          </th>
          <td>
            <%= @member.address %>
          </td>
        </tr>
        <tr>
          <th>
            メールアドレス
          </th>
          <td>
            <%= @member.email %>
          </td>
        </tr>
        <tr>
          <th>
            コメント感情分析スコア合計<br>(コメント数)
          </th>
          <td>
            <%= @member_score %><br>(<%= @member.comments.count %>)
          </td>
        </tr>
        <tr>
          <th>
            家族コード
          </th>
          <td>
            <%= link_to admin_familycode_path(@member.familycode_id) do %>
              <%= @member.familycode.famcode %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>
            投稿者一覧
          </th>
          <td>
            <% @familyusers.each do |familyuser| %>
              <%= link_to admin_user_path(familyuser) do %>
                ・<%= familyuser.name %>
              <% end %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>
            <div>
            家族メンバー一覧
            </div>
          </th>
          <td>
            <% @familymembers.each do |familymember| %>
              <%= link_to admin_member_path(familymember) do %>
                ・<%= familymember.name %>
              <% end %>
            <% end %>
          </td>
        </tr>
        <tr>
          <th>
            <%= link_to "削除する", admin_member_path(@member),method: :delete, class:"btn btn-danger" %>
          </th>
        </tr>
      </table>
    </div>
  </div>
</div>
