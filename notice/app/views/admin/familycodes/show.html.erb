<div class="container-fuluid">
  <div class="row">
    <div class="col-md-10 offset-1">
      <h1>家族コード:<%= @familycode.family_code %></h1>
      <h2>投稿者</h2>
      <% @familycode.users.each do |user| %>
      <table class="table">
        <thread>
          <tr>
            <th>ID</th>
            <th>氏名</th>
            <th>性別</th>
            <th>都道府県</th>
            <th>電話番号</th>
            <th>メールアドレス</th>
            <th>投稿数</th>
            <th>登録日時</th>
          </tr>
        </thread>
        <tbody>
        <tr>
          <th>
            <%= user.id %>
          </th>
          <td>
            <%= link_to admin_user_path(user) do %>
              <%= user.name %>
            <% end %>
          </td>
          <td>
            <%= user.gender %>
          </td>
          <td>
            <%= user.address %>
          </td>
          <td>
            <%= user.telephone_number %>
          </td>
          <td>
            <%= user.email %>
          </td>
          <td>
            <%= user.posts.count %>回
          </td>
          <td>
            <%= user.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
          </td>
        </tbody>
      </table>
      <% end %>
      <h2>家族会員</h2>
      <% @familycode.members.each do |member| %>
      <table class="table">
        <thread>
          <tr>
            <th>ID</th>
            <th>氏名</th>
            <th>性別</th>
            <th>都道府県</th>
            <th>電話番号</th>
            <th>メールアドレス</th>
            <th>コメント数</th>
            <th>登録日時</th>
          </tr>
        </thread>
        <tbody>
        <tr>
          <th>
            <%= member.id %>
          </th>
          <td>
            <%= link_to admin_member_path(member) do %>
              <%= member.name %>
            <% end %>
          </td>
          <td>
            <%= member.gender %>
          </td>
          <td>
            <%= member.address %>
          </td>
          <td>
            <%= member.telephone_number %>
          </td>
          <td>
            <%= member.email %>
          </td>
          <td>
            <%= member.comments.count %>回
          </td>
           <td>
            <%= member.created_at.strftime('%Y/%m/%d %H:%M:%S') %>
          </td>
        </tbody>
      </table>
      <% end %>
    </div>
  </div>
</div>