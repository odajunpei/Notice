<div class="container-fuluid">
  <div class="row">
    <div class="col-md-10 offset-1">
      <div class="page-title">
        <h1>お問い合わせ</h1>
      </div>
      <%= form_for @inquiry, :url => inquiry_thanks_path do |f| %>
        <table class="table">
          <tr>
            <th>名前</th>
            <td>
              <%= f.hidden_field :name %>
              <%= @inquiry.name %>
            </td>
          </tr>
          <tr>
            <th>メールアドレス</th>
            <td>
              <%= f.hidden_field :email %>
              <%= @inquiry.email %>
            </td>
          </tr>
          <tr>
            <th>お問い合わせ内容</th>
            <td>
              <%= f.hidden_field :message %>
              <%= simple_format(@inquiry.message) %>
            </td>
          </tr>
        </table>
        <span>
          <%= f.submit '送信', :class => 'btn btn-primary' %>
        </span>
        <span>
          <%= link_to '新規お問い合わせ画面に戻る', inquiry_index_path, class: "btn btn-primary" %>
        </span>
      <% end %>
    </div>
  </div>
</div>