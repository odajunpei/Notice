<% if user_signed_in? %>
<h1>家族コード作成画面</h1>
<%= form_with model:@famly_code,url:familycodes_path,local:true do |f| %>
  <%= f.label "家族コード" %>
  <%= f.text_field :family_code %>
  <%= f.hidden_field :user_id, value => @user.id %>
  <%= f.submit "登録する" %>
<% end %>
<% elsif member_signed_in? %>
  <%= f.collection_select :familycode_id, Familycode.all, :id, family_code ,prompt: '--選択してください--' %>
<% end %>